---
import heroImage from "../assets/heroImage.png";
import mountMg from "../assets/mountMg.png";
import mountFg from "../assets/mountFg.png";
import cloud1 from "../assets/cloud1.png";
import cloud2 from "../assets/cloud2.png";
import cloud3 from "../assets/cloud3.png";
---

<div
  class="relative top-0 flex items-center justify-center w-full overflow-hidden pointer-events-none h-[40vh] md:h-[50vh] lg:h-[70vh] xl:h-[90vh] hero-parallax"
>
  <div class="absolute top-0 h-full overflow-hidden md:w-full md:h-fit house">
    <img class="h-full w-fit" src={heroImage} />
    <h1
      class="absolute w-full font-sans text-2xl font-bold text-center text-white -translate-y-full top-2/4 lg:text-4xl xl:text-6xl"
      id="text"
    >
      VÃ¤lkommen till <br /> Lindvalls stugan
    </h1>
  </div>
  <img
    class="absolute top-0 left-0 w-full h-full lg:w-3/4 mountMg"
    src={mountMg}
  />
  <img class="absolute top-0 w-full h-full cloud2" src={cloud2} />
  <img
    class="absolute top-0 right-0 w-full h-full lg:w-3/4 mountFg"
    src={mountFg}
  />
  <img class="absolute top-0 w-full h-full cloud1" src={cloud1} />
  <img class="absolute bottom-0 w-full h-full cloud3" src={cloud3} />
</div>

---
import topFloorIcon from "../assets/OVicon.svg";
import bottomFloorIcon from "../assets/BVicon.svg";
import landscapeStuga from "../assets/landscapeStuga.jpg";
---

<section id="moreInfo">
  <div class="max-w-screen-2xl sm:px-6 lg:px-8 px-4 py-16 mx-auto">
    <div class="lg:h-screen lg:grid-cols-2 grid grid-cols-1">
      <div class="lg:py-16 relative z-10">
        <div class="sm:h-80 lg:h-full relative h-64">
          <img
            alt="House"
            src={landscapeStuga}
            class="absolute inset-0 object-cover w-full h-full rounded-xl"
          />
        </div>
      </div>

      <div
        class="sm:justify-start relative flex items-center justify-center bg-gray-100 rounded-r-xl"
      >
        <span
          class="lg:absolute lg:inset-y-0 lg:-left-16 lg:block lg:w-16 lg:bg-gray-100 hidden rounded-l-xl"
        ></span>

        <div class="sm:p-16 lg:p-24 p-8">
          <article class="text-start">
            <div class="flex justify-between">
              <div>
                <span>Övre lägenheten:</span>
                <ul>
                  <li>- 8 bäddar</li>
                  <li>- 80 kvm (ink loft)</li>
                  <li>- Öppen spis (ved finns)</li>
                </ul>
              </div>
              <img src={topFloorIcon} class="w-20 h-20" />
            </div>
            <div class="flex flex-col items-center gap-2 mt-12 text-left">
              <a
                href="/topApartment"
                class="hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500 inline-block px-12 py-3 text-sm font-medium text-white bg-indigo-600 border border-indigo-600 rounded"
              >
                Info om övre lägenheten
              </a>
            </div>
            <br />
            <div class="flex justify-between pt-8 border-t-2">
              <div>
                <span>Nedre lägenheten:</span>
                <ul>
                  <li>- 5 bäddar</li>
                  <li>- 42 kvm</li>
                </ul>
              </div>
              <img src={bottomFloorIcon} class="w-20 h-20" />
            </div>
            <div class="flex flex-col items-center gap-2 mt-12 text-left">
              <a
                href="/bottomApartment"
                class="hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500 inline-block px-12 py-3 text-sm font-medium text-white bg-indigo-600 border border-indigo-600 rounded"
              >
                Info om nedre lägenheten
              </a>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</section>
